<!DOCTYPE etl SYSTEM "http://scriptella.org/dtd/etl.dtd">
<etl>
  <description>Import vernacular names</description>

  <connection
    id="csv_vernacular"
    driver="csv"
    url="${csv.location}/taxon/VernacularName.tsv"
  >
    separator=\t
    encoding=UTF-8
    quote=
    null_string=
  </connection>
  <connection
    id="db"
    url="${db.url}"
    driver="postgresql"
    user="${db.user}"
    password="${db.password}"
  >
    statement.batchSize=100
  </connection>

  <query connection-id="csv_vernacular">
    <script connection-id="db">
      INSERT INTO sapin.taxon_vernacular_name (
        taxon_id,
        vernacular_name,
        language
      )
      VALUES (
        (SELECT taxon_id
         FROM sapin.tmp_taxon_id_src_taxon_name_id_asso
         WHERE src_taxon_name_id = ?taxonID),
        ?vernacularName,
        coalesce(?language, '_')
      ) ON CONFLICT DO NOTHING
    </script>
  </query>
</etl>
